<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_layout_id"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"
            android:background="@drawable/item_round"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="12"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/request_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/app_font_secondary_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_kennitala2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="2911963149"
                        android:textAlignment="center"
                        android:textColor="@color/app_font_secondary_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="HalldÃ³r"
                        android:textAlignment="center"
                        android:textColor="@color/app_font_secondary_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="12"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/old_transaction_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="2023.04.12"
                        android:textAlignment="center"
                        android:textColor="@color/app_font_secondary_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/old_transaction_clock_in"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="8:00am"
                        android:textAlignment="center"
                        android:textColor="@color/app_font_secondary_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/old_transaction_clock_out"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="24:00am"
                        android:textAlignment="center"
                        android:textColor="@color/app_font_secondary_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="12"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/transaction_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="2023.04.12"
                        android:textAlignment="center"
                        android:textColor="@color/app_font_secondary_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/transaction_clock_in"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="8:00am"
                        android:textAlignment="center"
                        android:textColor="@color/app_font_secondary_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/transaction_clock_out"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="24:00am"
                        android:textAlignment="center"
                        android:textColor="@color/app_font_secondary_color"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>